<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <context id="MySQL" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="utf8"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin">
            <property name="suppressJavaInterface" value="false"/>
        </plugin>

        <!--<plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"></plugin> -->

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
        </plugin>

        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>

        <commentGenerator>
            <!-- 一般情况下由于MBG生成的注释信息没有任何价值，而且有时间戳的情况下每次生成的注释都不一样,所以予以阻止生成 -->
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://172.26.1.26:13306/inner_manage"
                        userId="root"
                        password="123456"/>

        <javaTypeResolver>
            <!-- 是否强制DECIMAL和NUMERIC类型的字段转换为Java类型的java.math.BigDecimal -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.gowild.inner.holoera.manage.entity.po"
                            targetProject="src/main/java">
            <!-- 设置每个实体必须继承的根类
            <property name="rootClass" value=""/> -->
            <!-- 如果true，MBG会根据catalog和schema来生成子包 -->
            <property name="enableSubPackages" value="false"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper.manage"
                         targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="com.gowild.inner.holoera.manage.mapper.manage"
                             targetProject="src/main/java" type="XMLMAPPER">
            <!-- rootInterface: 用于指定一个所有生成的接口都继承的父接口
            <property name="rootInterface" value=""/> -->
        </javaClientGenerator>

        <!-- 生成所有表，如果指定生成某个表，就替换下面的% -->
        <table tableName="task_authority" domainObjectName="TaskAuthority">
            <generatedKey column="id" sqlStatement="mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>